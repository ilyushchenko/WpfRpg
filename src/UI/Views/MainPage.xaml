<Page x:Class="UI.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:UI"
      xmlns:view="clr-namespace:UI.Views"
      mc:Ignorable="d"
      Title="MainWindow"
      ShowsNavigationUI="False">
    <Page.Background>
        <ImageBrush ImageSource="/Images/Gui/main_bg.jpg" Opacity="1"/>
    </Page.Background>
    <Grid>
        <Button x:Name="CreateGameButton"
                Content="Create game"
                Width="160"
                Height="60"
                Click="CreateGameButton_Click" />
        <Button x:Name="FindGameButton"
                Content="Find games"
                Width="160"
                Height="60"
                Margin="320,282,320,108" Click="FindGameButton_Click" />
    </Grid>
</Page>